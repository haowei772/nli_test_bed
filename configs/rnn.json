                        "birnn": false,
                        "n_layers": 1,
                        "input_size": 100,
                        "hidden_size": 100,
                        "dp_ratio": 0.1
                    }
                },
                "p": {
                    "name": "rnn",
                    "inputs": ["p"],
                    "outputs": [{"name":"p"}],
                    "config": {
                        "rnn_cell": "lstm",
                        "birnn": false,
                        "n_layers": 1,
                        "input_size": 100,
                        "hidden_size": 100,
                        "dp_ratio": 0.1
                    }
                }
            }
        },
        "reducer":{
            "h": {
                "name": "mean",
                "inputs": ["h"],
                "outputs": [{"name": "h_reduced"}],
                "config": {},
